<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('commonLinks')%>
        <meta charset="UTF-8">
        <title>Document</title>
</head>

<body>
    <%-include('navbar')%>
        <div class="container">
            <form action="" method="post">
                <%for (var i=0;i<result.length;i++){%>
                    <div class="panel panel-default">
                        <div class="panel-heading">

                            <%-i+1,". ", result[i].question%>
                        </div>
                        <div class="panel-body">
                            <div class="radio">
                                <label>
                                    <input type="radio" name="<%-result[i]._id%>" id="optionsRadios1" required value="a">
                                    <%-result[i].options.a%>
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="<%-result[i]._id%>" id="optionsRadios1" value="b">
                                    <%-result[i].options.b%>
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="<%-result[i]._id%>" id="optionsRadios1" value="c">
                                    <%-result[i].options.c%>
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="<%-result[i]._id%>" id="optionsRadios1" value="d">
                                    <%-result[i].options.d%>
                                </label>
                            </div>
                        </div>
                    </div>


                    <%}%>
                        <input type="submit" value="Submit" class="btn btn-primary form-control">
            </form>

        </div>

</body>

</html>
