<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Document</title>

    <%- include( 'commonLinks')%>
</head>

<body>
   <%-include('adminnavbar')%>
    <div class="container">

        <div class="row">
            <div class="page-header">
                <h2>Add Graph data</h2></div>
            <form class="form-horizontal" method="post" action="">
                <div class="form-group">
                    <label for="week" class="col-sm-2 control-label">Label</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="label" placeholder="java" name="label" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="video" class="col-sm-2 control-label">Data</label>
                    <div class="col-sm-10">
                        <input type="number" id="data" name="data" class="form-control" required>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary form-control">Add</button>
                    </div>
                </div>
            </form>

        </div>


        <div class="row">
            <div class="page-header">
                <h2>Available Graph data</h2>
                <table class="table">

                    <tr>
                        <th>Sr.No</th>
                        <th>Label</th>
                        <th>Data</th>
                    </tr>

                    <% for(var i=0;i<chart_data.length;i++){ %>
                        <tr>
                            <td><%-i+1%></td>
                            <td>
                                <%-chart_data[i]['label']%>
                            </td>
                            <td>
                                <%-chart_data[i]['data']%>
                            </td>
                            
                            <td>
                                
                                <form action="/deletegraphdata" method="post">
                                    
                                    <input type="hidden" name="id" value="<%-chart_data[i]['_id']%>">
                                    <input type="submit" class="btn btn-danger" value="Remove">
                                </form>
                                
                            </td>
                        </tr>
                        <% } %>

                </table>

            </div>
        </div>
</body>

</html>
