<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Document</title>

    <%- include( 'commonLinks')%>
</head>

<body>

<%-include('adminnavbar')%>
    <div class="container">


        <div class="page-header">
            <h2>Available Courses</h2></div>

        <table class="table">
            <tr>
                <th>#</th>
                <th>Course</th>

            </tr>
            <% for(var i=0;i<result.length;i++) { %>
                <tr>
                    <td>
                        <%-i+1%>
                    </td>
                    <td>
                        <a href="/admin/<%-result[i]._id%>/paper" class="list-group-item" style="border:0px;margin:0;padding:0">
                            <%-result[i].name%>
                        </a>

                    </td>

                    <td>

                        <a href="/admin/vids/<%-result[i]._id%>" class="list-group-item" style="border:0px;margin:0;padding:0">video</a>
                    </td>
                    <td>

                        <a href="/admin/docs/<%-result[i]._id%>" class="list-group-item" style="border:0px;margin:0;padding:0">Docs</a>
                    </td>
                    <td>

                        <a href="/admin/cover/<%-result[i]._id%>" class="list-group-item" style="border:0px;margin:0;padding:0">Cover image</a>
                    </td>
                </tr>

                <% } %>
                    </tr>
        </table>


        <div class="page-header">
            <h2>Add Course</h2></div>
        <form class="form-horizontal" method="post" action="">
            <div class="form-group">
                <label for="course" class="col-sm-2 control-label">Course</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="course" name="course" placeholder="Course name" required>
                </div>
            </div>
            <div class="form-group">
                <label for="length" class="col-sm-2 control-label">About</label>
                <div class="col-sm-10">
                    <textarea name="about" id="about" placeholder="" required="" cols="30" rows="10" class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="length" class="col-sm-2 control-label">Prerequisite</label>
                <div class="col-sm-10">
                    <textarea name="prerequisite" id="prerequisite" placeholder="" required="" cols="30" rows="10" class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="length" class="col-sm-2 control-label">Length</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="length" name="length" placeholder="5 weeks" required>
                </div>
            </div>
            <div class="form-group">
                <label for="effort" class="col-sm-2 control-label">Effort</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="effort" name="effort" placeholder="4 hour/week">
                </div>
            </div>
            <div class="form-group">
                <label for="subject" class="col-sm-2 control-label">Subject</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="subject" name="subject" placeholder="Data structures" required>
                </div>
            </div>

            <div class="form-group">
                <label for="level" class="col-sm-2 control-label">Level</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="level" name="level" placeholder="Intermediate" required>
                </div>
            </div>

            <div class="form-group">
                <label for="language" class="col-sm-2 control-label">Language</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="language" name="language" placeholder="English" required>
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </div>
        </form>


    </div>




    <%-result%>

</body>

</html>
