<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Document</title>

    <%- include( 'commonLinks')%>
</head>

<body>
   <%-include('adminnavbar')%>
    <div class="container">
        <div class="row">
            <div class="page-header">
                <h3>Add video</h3>
            </div>
            <form enctype="multipart/form-data" class="form-horizontal" method="post" action="">
                <div class="form-group">
                    <label for="week" class="col-sm-2 control-label">Week</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="week" placeholder="1" name="week" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="video" class="col-sm-2 control-label">Video</label>
                    <div class="col-sm-10">
                        <input type="file" class="" id="video" name="video" accept=".docx,.pdf" required>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </div>
            </form>

        </div>
        <% if(course_info!="no" ){ vids=course_info.material.vids; %>

            <div class="page-header">
                <h3>Available videos</h3>
            </div>
            <table class="table">
                <tr>
                    <th>week</th>
                    <th>Name</th>

                </tr>
                <%for(var i=0;i<vids.length;i++){%>
                    <tr>
                        <td>
                            <%-vids[i][ 'week']%>
                        </td>
                        <td>
                            <%-vids[i][ 'name']%>
                        </td>
                        <td>
                            <form action="/deletevideo" method="post">
                               <input type="hidden" name="course" value="<%-course_info.name%>">
                                <input type="hidden" name="name" value="<%-vids[i]['name']%>">
                                <input type="submit" value="Remove" class="btn btn-danger">
                            </form>

                        </td>
                    </tr>
                    <%}%>
            </table>
            <%}%>
    </div>
</body>

</html>
